{
  "name": "es6-project",
  "version": "1.0.0",
  "description": "ES6 Project",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:css": "node-sass --output-style compressed src/css/styles.scss public/css/styles.css",
    "build:js": "NODE_ENV=production browserify src/index.js -t babelify -t stripify | uglifyjs -mc > public/js/script.js",
    "dev": "npm run watch & browser-sync start --server public --files \"public/js/*.js, public/css/*.css\" --index index.html --browser \"google chrome\"",
    "install-local": "npm install babel-preset-es2015 babelify stripify --save-dev",
    "test": "echo \"Error: no test specified\" && exit 1", 
    "watch": "npm run watch:js & npm run watch:css",
    "watch:css": "node-sass --output-style compressed --watch src/css/styles.scss public/css/styles.css",
    "watch:js": "watchify src/index.js -t babelify -o public/js/script.js --verbose --debug",
  },
  "author": "Ville Juutilainen",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.15.0",
    "browserify": "^12.0.2",
    "node-sass": "^3.9.3",
    "stripify": "^4.0.0",
    "uglify-js": "^2.7.3",
    "watchify": "^3.7.0"
  },
  "engines": {
    "node": "6.5.0"
  }
}
