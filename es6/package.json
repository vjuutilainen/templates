{
  "name": "es6-project",
  "version": "1.0.0",
  "description": "ES6 Project",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-latest": "npm install babel-preset-es2015 babelify browserify http-server node-sass uglify-js watchify --save-dev",
    "install-local": "npm install babel-preset-es2015 babelify --save-dev",
    "watch-js": "watchify src/index.js -t babelify -o public/js/script.js --verbose --debug",
    "build-js": "NODE_ENV=production browserify src/index.js -t babelify | uglifyjs -mc > public/js/script.min.js",
    "build-css": "node-sass --output-style compressed src/css/styles.scss public/css/styles.css",
    "watch-css": "node-sass --output-style compressed --watch src/css/styles.scss public/css/styles.css",
    "watch": "npm run watch-js & npm run watch-css",
    "build": "npm run build-js && npm run build-css",
    "dev": "npm run watch & http-server -o"
  },
  "author": "Ville Juutilainen",
  "license": "ISC",
  "devDependencies": {
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "http-server": "^0.8.5",
    "node-sass": "^3.4.2",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  }
}
