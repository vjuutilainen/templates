{
  "name": "yle-project-basic",
  "version": "1.0.0",
  "description": "Yle Plus Basic Project",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-latest": "npm install babel-preset-es2015 babelify browserify es5-shim node-sass uglify-js watchify --save-dev",
    "install-local": "npm install babel-preset-es2015 babelify es5-shim --save-dev",
    "watch-js": "watchify src/index.js -t babelify -o js/script.js --verbose --debug",
    "build-js": "NODE_ENV=production browserify src/index.js -t babelify | uglifyjs -mc > js/script.min.js",
    "build-css": "node-sass --output-style compressed css/styles.scss css/styles.css",
    "watch-css": "node-sass --output-style compressed --watch css/styles.scss css/styles.css",
    "watch": "npm run watch-js & npm run watch-css",
    "build": "npm run build-js && npm run build-css"
  },
  "author": "Ville Juutilainen",
  "license": "ISC",
  "devDependencies": {
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "es5-shim": "^4.3.1",
    "node-sass": "^3.4.2",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  }
}
